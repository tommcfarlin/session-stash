{
  "manifest_version": 3,
  "name": "Session Stash",
  "version": "1.0.0",
  "description": "Save all open tabs across all windows to a timestamped bookmark folder with one click",
  "permissions": ["tabs", "bookmarks", "notifications", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Save All Tabs to Bookmarks"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Save all tabs to bookmarks"
    }
  }
}
